<%= form_with(model: portfolio_item, local: true) do |form| %>
  <% if portfolio_item.errors.any? %>
      <% portfolio_item.errors.full_messages.each do |error| %>
          <%= alert_generator(error) %>
      <% end %>
  <% end %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, id: :portfolio_title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :subtitle %>
        <%= form.text_field :subtitle, id: :portfolio_subtitle, class: 'form-control' %>
      </div>

      <div class="form-group">
        <label class="btn btn-primary">
          Upload an image file <%= form.file_field :image, style: 'display:none;' %>
        </label>

      </div>


    </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :body %>
        <%= form.text_area :body, id: :blog_body, class: 'form-control', rows: 9 %>
      </div>
    </div>

    <div class="col-md-12">
      <h2>Technologies Used:</h2>

      <div>
        <%= form.fields_for :technologies do |t_form| %>
          <%= render 'technology_fields', f: t_form %>
        <% end %>

        <div>
          <%= link_to_add_association 'Add Technology', form, :technologies %>
        </div>
      </div>

      <div class="form-group">
        <%= form.submit 'Save Portfolio Item', class: 'btn btn-primary btn-block' %>
      </div>
    </div>
  </div>
<% end %>
